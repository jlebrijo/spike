#albums{data:{controller: 'albums'}}
  %h1 Listing albums

  %table
    %thead
      %tr
        %th Name
        %th User
        %th
        %th
        %th

    %tbody
      - @albums.each do |album|
        %tr{data: {id: album.id}}
          %td= album.name
          %td= album.user
          %td= link_to 'Show', album, class: 'show', data:{action:'albums#showModal'}
          %td= link_to 'Edit', edit_album_path(album), class: 'edit', data:{action:'albums#showModal'}
          %td= link_to 'Destroy', album, remote: true, method: :delete, data: { confirm: 'Are you sure?' }

  %br

  = link_to 'New Album', new_album_path, class: 'btn btn-primary new', data:{action:'albums#showModal'}

  #formModal.modal.fade
    .modal-dialog
      .modal-content{data:{target: 'albums.modalContent'}}
