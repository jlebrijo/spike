= simple_form_for @album, data: {action:'ajax:complete->albums#submit'}, remote: true do |f|
  .modal-body
    = render partial: 'layouts/form_errors', locals: { form: f }

    .form-inputs
      = f.input :name
      .row
        .col= f.input :picture
        - if @album.picture.attached?
          .col
            %label Actual picture:
            = image_tag @album.picture.variant(resize_to_limit: [100, 100])
      = f.label :content
      = f.rich_text_area :content

  .modal-footer
    %button.btn.btn-secondary{data: {dismiss: "modal"}, type: "button"} Close
    = f.submit 'Save', class: 'btn btn-primary'
