!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Spike
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag "application", "data-turbo-track": "reload"
    = javascript_include_tag "application", "data-turbo-track": "reload", defer: true
  %body{"cz-shortcut-listen" => "true"}
    %nav.navbar.navbar-expand-md.navbar-dark.fixed-top.bg-dark
      .container-fluid
        %a.navbar-brand{:href => "#"} Fixed navbar
        %button.navbar-toggler{"aria-controls" => "navbarCollapse", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-bs-target" => "#navbarCollapse", "data-bs-toggle" => "collapse", :type => "button"}
          %span.navbar-toggler-icon
        #navbarCollapse.collapse.navbar-collapse
          %ul.navbar-nav.me-auto.mb-2.mb-md-0
            %li.nav-item
              %a.nav-link.active{"aria-current" => "page", :href => "#"} Home
            %li.nav-item
              %a.nav-link{:href => "#"} Link
            %li.nav-item
              %a.nav-link.disabled Disabled
          %form.d-flex{:role => "search"}
            %input.form-control.me-2{"aria-label" => "Search", :placeholder => "Search", :type => "search"}/
            %button.btn.btn-outline-success{:type => "submit"} Search
    %main.container
      %br
      .bg-light.p-5.rounded.mt-5 
        = yield
