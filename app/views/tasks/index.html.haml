%h1 Listing tasks

%table
  %thead
    %tr
      %th Done
      %th Title
      %th
      %th
      %th

  %tbody
    - @tasks.each do |task|
      %tr
        %td= task.done
        %td= task.title
        %td= link_to 'Show', task
        %td= link_to 'Edit', edit_task_path(task)
        %td= link_to 'Destroy', task, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }

%br

= link_to 'New Task', new_task_path
