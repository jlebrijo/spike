-# frozen_string_literal: true
= simple_form_for task, wrapper: :inline_form, html: { class: "row row-cols-lg-auto g-3 align-items-start" }, wrapper_mappings: { boolean: :inline_boolean } do |f|
  
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .col-sm-1= f.input :done, label: false
  .col-sm-4= f.input :title, label: false, input_html: { class: 'form-control form-control-sm' }

  .col-sm-2= f.button :submit, class: 'btn btn-primary btn-sm'
