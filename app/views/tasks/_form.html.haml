-# frozen_string_literal: true
= simple_form_for @task, wrapper: :inline_form, html: { class: "row row-cols-lg-auto g-3 align-items-center" }, wrapper_mappings: { boolean: :inline_boolean } do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  = f.input :done, label: false
  = f.input :title, label: false, input_html: { class: 'form-control form-control-sm' }

  = f.button :submit, class: 'btn btn-primary btn-sm'
